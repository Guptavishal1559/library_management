<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="book_dept_form_view" model="ir.ui.view">
        <field name="name">book.dept.form.view</field>
        <field name="model">book.dept</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="print_rec" string="Print" type="object"/>
                    <button name="create_rec" string="Create" type="object"/>
                    <button name="search_rec" string="Search" type="object"/>
                    <button name="browse_rec" string="Browse" type="object"/>
                    <button name="delete_rec" string="Delete" type="object"/>
                    <button name="copy_rec" string="Copy" type="object"/>
                    <!--                    <button name="update_rec" string="Update" type="object"/>-->
                </header>
                <sheet>
                    <div class="row">
                        <div class="col">
                            <h1 bg_color="bg-danger">Book Department</h1>
                            <hr/>
                        </div>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="code"/>
                        </h1>
                    </div>
                    <div class="row">
                        <div class="col col-md-6">
                            <group>
                                <field name="name" placeholder="Enter the book name"/>
                                <field name="isbn"/>
                                <field name="language_id"/>
                                <field name="currency_id"/>
                                <field name="book_price"/>
                            </group>
                        </div>
                        <div class="col col-md-6">
                            <group>
                                <field name="genre_ids" placeholder="Genre" widget="many2many_tags"/>
                                <field name="publish_date"/>
                                <!--                                <field name="quantity"/>-->
                                <field name="color" widget="color_picker"/>
                            </group>
                        </div>
                    </div>
                    <notebook>
                        <page name="author" String="Author Details">
                            <field name="author_ids" editable="bottom"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--+++++++++++++++++++++++++++++Tree View++++++++++++++++++++++++++++++++++-->
    <record id="book_dept_tree_view" model="ir.ui.view">
        <field name="name">book.dept.tree.view</field>
        <field name="model">book.dept</field>
        <field name="arch" type="xml">
            <!--            <tree delete="0" create="0" edit="0">-->
            <tree>
                <!--Optional attribute gives the flexbility to the user to display or hide the field on the tree view-->
                <!--optional="show" by default displays the field on list view but can be hidden-->
                <!--optional="hide" by default hides the field on list view but cna be displayed-->
                <field name="code" size="4"/>
                <field name="name"/>
                <field name="isbn"/>
                <field name="language_id"/>
                <field name="currency_id"/>
                <field name="book_price" optional="show"/>
                <field name="genre_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                <field name="author_ids" optional="hide"/>
                <field name="publish_date"/>
                <field name="color" widget="colorpicker"/>
            </tree>
        </field>
    </record>

    <!--+++++++++++++++++++++++++++++Kanban View++++++++++++++++++++++++++++++++++-->
    <record id="book_dept_kanban_view" model="ir.ui.view">
        <field name="name">book.dept.kanban.view</field>
        <field name="model">book.dept</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card">
                            <div>
                                <b>Code:</b>
                                <field name="code"/>
                                <br/>
                                <b>Book Name:</b>
                                <field name="name"/>
                                <br/>
                                <b>ISBN:</b>
                                <field name="isbn"/>
                                <br/>
                                <b>Language:</b>
                                <field name="language_id"/>
                                <br/>
                                <b>Book Price:</b>
                                <field name="currency_id"/>
                                <field name="book_price"/>
                                <br/>
                                <b>Genre:</b>
                                <field name="genre_ids" options="{'color_field':'color'}" widget="many2many_tags"/>
                                <b>Author:</b>
                                <field name="author_ids"/>

                            </div>
                            <div class="o_dropdown_kanban o_dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown"
                                   data-display="static" href="#" aria-lable="Dropdown menu" title="Dropdown menu">
                                    <spna class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="open" class="dropdown-item">Open</a>
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <div role="separator" class="dropdown-divider"/>
                                    <a role="menuitem" type="object" class="dropdown-item" name="search_rec">Seacrh</a>
                                    <div role="separator" class="dropdown-divider"/>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--+++++++++++++++++++++++++++++++++CALENDAR VIEW+++++++++++++++++++++++++++++++++++++++-->
