<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="type_form_view" model="ir.ui.view">
        <field name="name">type.form.view</field>
        <field name="model">book.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="type_tree_view" model="ir.ui.view">
        <field name="name">type.tree.view</field>
        <field name="model">book.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

    <record id="action_type" model="ir.actions.act_window">
        <field name="name">Genre</field>
        <field name="res_model">book.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="type_list" action="action_type" parent="library_management.menu_configuration"/>

</odoo>