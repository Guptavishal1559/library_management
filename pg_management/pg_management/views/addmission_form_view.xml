<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <!--    addmission form view-->
    <record id="addmission_form_view" model="ir.ui.view">
        <field name="name">addmission.from.view</field>
        <field name="model">addmission.form</field>
        <field name="arch" type="xml">
            <form>
                <!--                <header>-->
                <!--                    <button name="create_rec" string="Create" type="object"/>-->
                <!--                    <button name="delete_rec" string="Delete" type="object"/>-->
                <!--                    <button name="copy_rec" string="Copy" type="object"/>-->
                <!--                    <button name="browse_rec" string="Browse" type="object"/>-->
                <!--                </header>-->
                <sheet class="ms-auto">
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <label for="name"/>
                    <h1 colspan="4">
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="address"/>
                            <field name="email" widget="email"/>
                            <field name="room_no"/>
                            <field name="study_job"/>
                        </group>
                        <group>
                            <field name="company_institute_name_add"/>
                            <field name="father_name"/>
                            <field name="father_occupation"/>
                            <field name="phone" widget="phone"/>
                            <field name="phone2" widget="phone"/>
                            <field name="join_date"/>
                            <field name="deposite"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="rooms" string="Rooms">
                            <field name="room_id" widget="radio"/>
                        </page>
                        <page name="room" string="Facility">
                            <field name="facility_ids" widget="many2many_checkboxes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--    addmission tree view-->
    <record id="addmission_tree_view" model="ir.ui.view">
        <field name="name">addmission.tree.view</field>
        <field name="model">addmission.form</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="email"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="join_date"/>
                <field name="deposite"/>
                <field name="room_no"/>
                <field name="study_job"/>
                <field name="room_id"/>
                <field name="facility_ids"/>
            </tree>
        </field>
    </record>

