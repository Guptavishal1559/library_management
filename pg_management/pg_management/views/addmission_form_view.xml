    <!--    addmission action view-->
    <record id="addmission_form_action" model="ir.actions.act_window">
        <field name="name">Addmission Form</field>
        <field name="res_model">addmission.form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="addmission_form_menu" action="addmission_form_action" parent="pg_management.room_type_menu"/>
</odoo>