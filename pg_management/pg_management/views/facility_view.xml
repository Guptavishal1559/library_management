<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="facility_form_view" model="ir.ui.view">
        <field name="name">facility.form.view</field>
        <field name="model">pg.facility</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <!--    ++++++++++++++++TREE VIEW+++++++++++++++++++++++++++++++++++++++-->
    <record id="facility_tree_view" model="ir.ui.view">
        <field name="name">facility.tree.view</field>
        <field name="model">pg.facility</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


<!--    +++++++++++++++++++++ACTION VIEW++++++++++++++++++++++++++++++-->
    <record id="facility_action" model="ir.actions.act_window">
        <field name="name">Facility</field>
        <field name="res_model">pg.facility</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="facility_menu" action="facility_action" parent="pg_management.room_type_menu"/>

</odoo>